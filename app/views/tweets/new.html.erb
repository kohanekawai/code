
<h3>新規投稿ページ</h3>
<%= form_for @tweet do |f| %>

   <div class="field">
    <%= f.label :Date  %>
    <%= f.text_area :item, :size => "30x2" %>
  </div>  

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :Point  %>
    <%= f.text_area :point, :size => "30x2" %>
  </div>
  <div class='form-group'>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name) do |tag| %>
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
        <% end %>
    </div>
   <%= f.submit "投稿する" %>
<% end %>

<%= link_to "トップページに戻る", tweets_path %>