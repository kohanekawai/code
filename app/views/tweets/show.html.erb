<%= @tweet.item %>
<%= @tweet.point %>
<% @tweet.tags.each do |tag| %>
    <span><%= tag.tag_name %></span>
<% end %>
<% end %>

<% if user_signed_in? %>
  <% if current_user.already_liked?(@tweet) %>
    <% like = current_user.likes.find_by(tweet_id: @tweet.id) %>
    <%= link_to tweet_like_path(@tweet, like), data: { turbo_method: :delete } do %>
      いいねを取り消す <%= @tweet.likes.count %>
    <% end %>
  <% else %>
    <%= link_to tweet_likes_path(@tweet), data: { turbo_method: :post } do %>
      いいね <%= @tweet.likes.count %>
    <% end %>
  <% end %>
<% end %>

    <% else %>
      <p>いいねの数 = </p><%= @tweet.likes.count %>
    <% end %>
  <%= link_to "編集する", edit_tweet_path(@tweet.id) %>
</div>

<h2>いいねしたユーザー</h2>
<% @tweet.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>

<%= link_to "Tweet一覧に戻る", tweets_path %>